<div class="mb-3">
    <a href="/random" class="btn btn-primary">Random Episode</a>
</div>


<div class="d-flex flex-wrap">
    {{#each data as |episode|}}
        <div class="card m-1" style="width: 18rem;">
        <img src="{{episode.image.medium}}" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">{{episode.name}}</h5>
            <p class="card-text">{{episode.summary}}</p>
        </div>
        </div>
    {{/each}}
</div>